<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Tool Panel: First Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:backgroundTint="#FFC0CB" />

        <Button
            android:id="@+id/brushSizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brush Size"
            android:backgroundTint="#FFC0CB"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Tool Panel: Second Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/colorPickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Picker"
            android:backgroundTint="#FFC0CB"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/opacityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opacity"
            android:backgroundTint="#FFC0CB" />
    </LinearLayout>

    <!-- Tool Panel: Third Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/undoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:backgroundTint="#FFC0CB"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/redoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redo"
            android:backgroundTint="#FFC0CB" />
    </LinearLayout>

    <!-- Doodle Canvas -->
    <com.example.doodle.DoodleView
        android:id="@+id/doodleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" />
</LinearLayout>
